<?xml version="1.0"?>
<addon scheme="3.0">
	<id>hw_popup_info</id>
	<version>1.2</version>
	<priority>700</priority>
	<position>0</position>
	<status>active</status>
	<default_language>en</default_language>
	<auto_install>MULTIVENDOR,ULTIMATE</auto_install>
	<authors>
	   <author>
	       <name>Hungryweb</name>
	       <email>info@hungryweb.net</email>
	       <url>https://www.hungryweb.net</url>
	   </author>
	</authors>
	<settings edition_type="ROOT,ULT:VENDOR" layout="separate">
		<sections>
			<section id="general">
				<items>
				
					<item id="banner_id">
						<type>input</type>
						<default_value></default_value>
						<translations/>
						<variants/>
					</item>
					
					<item id="width">
						<type>input</type>
						<default_value>300</default_value>
						<translations/>
						<variants/>
					</item>	
												
					<item id="testmode">
						<type>checkbox</type>
						<default_value>N</default_value>
						<translations/>
						<variants/>
					</item>	
					
				</items>
			</section>
		</sections>
	</settings>
    <functions>
        <item for="install">fn_hw_popup_info_install</item>
        <item for="uninstall">fn_hw_popup_info_uninstall</item>
    </functions>  
</addon>